@model Message
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/Student/_StudentLayout.cshtml";
}

<h1>Yeni Mesaj</h1>

<div class="container">
    <form method="post">
        <label>Kullanıcı Adı</label>
        <input type="text" required asp-for="ReceiverName" placeholder="Kullanıcı adı" class="form-control" />
        <br />
        <label>Konu</label>
        <input type="text" required asp-for="Subject" placeholder="Konu" class="form-control" />
        <br />
        <label>Mesaj</label>
        <textarea asp-for="MessageDetails" required class="form-control" rows="5" placeholder="Mesajı yazınız"></textarea>
        
        <br />
        <a class="btn btn-danger" href="/Message/GetInboxStudent/">İptal</a>
        <button type="submit" class="btn btn-success">Gönder</button>
    </form>
</div>