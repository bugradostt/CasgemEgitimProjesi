@model Message

@{
    ViewData["Title"] = "GetInboxTeacher";
    Layout = "~/Views/Shared/Teacher/_TeacherLayout.cshtml";
}

<div class="col-md-12">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Mesaj Detayı</h3>
            <hr />

            <div class="card-tools">
                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Previous"><i class="fas fa-chevron-left"></i></a>
                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Next"><i class="fas fa-chevron-right"></i></a>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body ">


            <div class="mb-3">

                <label>Gönderen</label>
                <input type="text" readonly class="form-control" value="@Model.ReceiverName" />

            </div>




            <div class="mb-3">

                <label>Tarih</label>
                <input type="text" readonly class="form-control" value="@Model.MessageDate.ToShortDateString()" />

            </div>



            <div class="mb-3">

                <label>Konu</label>
                <input type="text" readonly class="form-control" value="@Model.Subject" />

            </div>


            <div class="mb-3">

                <label>Konu</label>
                <textarea readonly class="form-control" rows="3">@Model.MessageDetails</textarea>

            </div>

            <br />
            <a href="/Message/GetInboxTeacher/" class="btn btn-dark">Mesajlara Dön</a>



            <!-- /.mailbox-read-message -->
        </div>
    </div>
    <!-- /.card -->

</div>
